<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerLibros">

    <ListView
        android:id="@+id/listView_libro"
        android:layout_width="409dp"
        android:layout_height="569dp"
        android:layout_marginTop="68dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_libreriaVerLibros"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="@+id/tv_libreriaVerLibros"
        app:layout_constraintTop_toBottomOf="@+id/tv_libreriaVerLibros" />

    <TextView
        android:id="@+id/tv_libreriaVerLibros"
        android:layout_width="180dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.073"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.082" />

    <Button
        android:id="@+id/btn_crearLibro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:text="CREAR LIBRO"
        app:layout_constraintBottom_toBottomOf="@+id/tv_libreriaVerLibros"
        app:layout_constraintStart_toEndOf="@+id/tv_libreriaVerLibros"
        app:layout_constraintTop_toTopOf="@+id/tv_libreriaVerLibros"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>