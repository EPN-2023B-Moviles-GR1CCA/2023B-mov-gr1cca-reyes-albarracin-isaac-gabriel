        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ExamenBI"
        tools:targetApi="31">
        <activity
            android:name=".ActualizarLibro"
            android:exported="false"
            android:parentActivityName=".VerLibros">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ActualizarLibro" />
        </activity>
        <activity
            android:name=".ActualizarLibreria"
            android:exported="false"
